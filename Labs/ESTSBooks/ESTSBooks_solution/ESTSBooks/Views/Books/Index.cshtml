@model IEnumerable<ESTSBooks.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Manager") || User.IsInRole("Supplier"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.BookStoreId)
            </td>
            <td>
                @if (User.IsInRole("Manager") || User.IsInRole("Supplier")){<a asp-action="Edit" asp-route-id="@item.BookId">Edit</a>} 
                <a asp-action="Details" asp-route-id="@item.BookId">Details</a> 
                @if (User.IsInRole("Manager")){<a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>}
            </td>
        </tr>
}
    </tbody>
</table>
