@model IEnumerable<SleepSetubal.Models.Room>

@{
    ViewData["Title"] = "Quartos disponíveis";
}

<h1>AvailableRooms</h1>

@if (Model.Count() == 0)
{
    <p>Não existem quartos disponíveis</p>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.beds)
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @foreach (var bed in item.beds)
                    {
                        @Html.DisplayFor(modelItem => bed)
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
}